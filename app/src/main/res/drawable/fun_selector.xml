<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape
            android:shape="rectangle">

            <solid
                android:color="@color/fun_button_BG"/>
            <stroke
                android:width="0.1dp"
                android:color="@color/stroke_selector"/>
        </shape>

    </item>

    <item android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <solid
                android:color="@color/pressed_true"/>
            <stroke
                android:color="@color/stroke_selector"
                android:width="0.1dp"/>

        </shape>


    </item>

</selector>